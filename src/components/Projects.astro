<div class="flex flex-col gap-y-20">
  {
    PROJECTS.map(
      ({ image, title, description, tags, alt, link, github }, index) => (
        <article
          class={`flex flex-col space-x-0 space-y-8 group md:flex-row ${index % 2 === 1 ? "md:flex-row-reverse md:space-x-reverse" : ""} md:space-x-12 md:space-y-0 items-center project-card`}
        >
          <div class="w-full md:w-1/2">
            <div class="relative flex flex-col items-center gap-8 transition-all duration-500 ease-out transform shadow-2xl overflow-clip rounded-2xl md:group-hover:-translate-y-2 md:group-hover:shadow-blue-500/20 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-600">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
              <img
                alt={alt}
                class="relative object-cover object-top w-full h-64 transition-all duration-500 md:h-80 md:scale-105 md:group-hover:scale-100"
                loading="lazy"
                src={image}
              />
            </div>
          </div>

          <div class="w-full md:w-1/2 md:max-w-lg">
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
              {title}
            </h3>
            <div class="flex flex-wrap gap-2 mb-4">
              {tags.map((tag) => (
                <span
                  class={`flex gap-x-2 rounded-full text-xs font-medium ${tag.class} py-2 px-3 shadow-sm hover:shadow-md transition-shadow duration-300`}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              ))}
            </div>

            <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
              {description}
            </p>

            <footer class="flex items-center gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHubIcon class="size-5" />
                  Código
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Vista Previa
                </LinkButton>
              )}
            </footer>
          </div>
        </article>
      )
    )
  }
</div>

<style>
  .project-card {
    opacity: 0;
    animation: fadeInProject 0.6s ease-out forwards;
  }

  .project-card:nth-child(1) {
    animation-delay: 0.1s;
  }
  .project-card:nth-child(2) {
    animation-delay: 0.2s;
  }
  .project-card:nth-child(3) {
    animation-delay: 0.3s;
  }
  .project-card:nth-child(4) {
    animation-delay: 0.4s;
  }
  .project-card:nth-child(5) {
    animation-delay: 0.5s;
  }

  @keyframes fadeInProject {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
